@model IEnumerable<LawyerOffice.Models.Offices>

@{
    ViewBag.Title = "المكاتب";
}

<h2>سجل المكاتب</h2>



<style>

    td {
        text-align: center;
        font-weight:bold;
    }

    th {
        text-align: center;
        color:white;
    }


    body {
        font-family: 'Cairo', sans-serif;
        font-size: 14px;
    }

    thead {
        background-color: orange;
    }
</style>


<Center>

    @using (Html.BeginForm("AddOffice", "Mange"))
    {
        <div style="align-content:center" class="">

            <table>
                <tr>
                    <td>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input id="_officeName" name="_officeName" class="form-control text-right  text-box single-line"  type="text" style="width:170px ; height:32px" />
 
                            </div>
                        </div>


                     </td>
                    <td> <label> اسم المكتب</label></td>

                </tr>

                <tr>
                    <td>


                        <div class="form-group">
                            <div class="col-md-12">
                                 <input id="_description" name="_description" class="form-control text-right  text-box single-line" type="text" style="width:170px ; height:32px" />

                            </div>
                        </div>
                     </td>
                    <td> <label>تفاصيل </label></td>

                </tr>

                <tr>
                    <td>
                        <button class="btn btn-default" value="Search" style=" width:170px; background-color:#428bca;">اضافه</button>
                    </td>
                    <td></td>

                </tr>
            </table>
            <h5></h5>

        </div>

    }

</Center>
<div class="table-responsive">

    <table class="table  table-bordered table-hover table-striped">
        <thead class="table-heading bg-primary">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OfficeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Url.Action("DeleteOffice", new { id = item.Id })" class="btn btn-default" style="float:right"><i class="fas fa-trash-alt"></i>    حذف</a>

                    @*@Html.ActionLink("حذف", "DeleteOffice", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>
    </div>
    <a href="@Url.Action("index")" class="btn btn-default"><i class="fas fa-backward"></i> الرجوع</a>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>


    <script>

        $(function () {
            var DeleteMessage = '@TempData["OfficeDelete"]'

             if (DeleteMessage != '') {

                 alertify.success(DeleteMessage);
                 alertify.confirm("تم الحذف بنجاح..");
            }

        })


    </script>
