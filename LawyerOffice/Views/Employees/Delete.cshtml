@model LawyerOffice.Models.EmpOfficeJob

@{
    ViewBag.Title = "حذف";
}

 
<h4 class="text-right">متأكد من الحذف؟</h4>
<div class=" text-right" style="direction:rtl">
     <hr />
    <dl class="dl-horizontal">
        <dt>
             @Html.DisplayNameFor(model => model.EmpY.employeeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmpY.employeeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmpY.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmpY.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmpY.phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmpY.phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmpY.jobs)
        </dt>

        <dd>
            @foreach (var items in Model.JobX.Where(h => h.id.ToString() ==Model.EmpY.jobs))
            {
                @Html.DisplayFor(modelItem => items.jobs)
            }
         </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmpY.Salary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmpY.Salary)
        </dd>

        <dt>
          
            @Html.DisplayNameFor(model => model.EmpY.OfficeName)
        </dt>

        <dd>
            @foreach (var items in Model.OfficeX.Where(h => h.Id.ToString() == Model.EmpY.OfficeName))
            {
                @Html.DisplayFor(modelItem => items.OfficeName)
            }
         </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmpY.Paswword)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmpY.Paswword)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> 
         </div>
    }
</div>
<a href="@Url.Action("index","Employees")" class="btn btn-default"><i class="fas fa-backward"></i> الرجوع</a>
