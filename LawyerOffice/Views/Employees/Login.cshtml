@model LawyerOffice.Models.Employees

@{
    ViewBag.Title = "تسجيل الدخول";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

<h2 class="text-right">تسجيل الدخول</h2>
            <hr />
    <center>
        <div class="form-horizontal py-5" style="">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.employeeName, new { htmlAttributes = new { @class = "form-control ", @placeholder = "أسم المستخدم" } })
                    @Html.ValidationMessageFor(model => model.employeeName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Paswword, new { htmlAttributes = new { @class = "form-control", @placeholder = "كلمة المرور" } })
                    @Html.ValidationMessageFor(model => model.Paswword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="الدخول" class="btn btn-lg btn-success " />
                </div>
            </div>
        </div>
    </center>
}

 
