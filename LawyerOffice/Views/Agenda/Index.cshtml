
@{
    ViewBag.Title = "الاجنده";
}

 
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />

    <link href="~/Content/agenda/main.css" rel="stylesheet" />

    <link href="~/Content/agenda/daygrid/main.css" rel="stylesheet" />


    <script src="~/Content/agenda/main.js"></script>
    <script src="~/Content/interaction/main.js"></script>
    <script src="~/Content/agenda/daygrid/main.js"></script>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['interaction', 'dayGrid'],
              //  defaultDate: '2019-03-12',
             //   editable: true,
                displayEventTime: false,
                eventLimit: true, // allow "more" link when too many events
                 events:'@Url.Action("getdata", "Agenda",null)'

                });

            calendar.render();
        });



    </script>
    <style>
        body {
             padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 1200px;
            
            margin: 0 auto;
        }
    </style>
</head>
<body>

    <div id='calendar'></div>

</body>
</html>
